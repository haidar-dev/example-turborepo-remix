{
  "exclude": [
    "./cypress",
    "./cypress.config.ts"
  ],
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2019"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@remix-turborepo/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@remix-turborepo/ui": [
        "../../packages/ui/src/index"
      ],
      "@remix-turborepo/business/*": [
        "../../packages/business/src/*"
      ],
      "@remix-turborepo/business": [
        "../../packages/business/src/index"
      ],
      "@remix-turborepo/database/*": [
        "../../packages/database/src/*"
      ],
      "@remix-turborepo/database": [
        "../../packages/database/src/index"
      ],
      "@remix-turborepo/internal-nobuild": [
        "../../packages/internal-nobuild/src/index"
      ],
      "@remix-turborepo/internal-nobuild/*": [
        "../../packages/internal-nobuild/src/*"
      ]
    },
    "noEmit": true
  }
}